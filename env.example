# =============================================================================
# Environment Configuration for DigiFynn
# =============================================================================

# =============================================================================
# WordPress & GraphQL Configuration
# =============================================================================
# WordPress GraphQL endpoint
WP_GRAPHQL_ENDPOINT=https://cms.digifynn.com/graphql

# =============================================================================
# Security & Authentication
# =============================================================================
# JWT Secret for authentication (REQUIRED in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Rate limiting secret
RATE_LIMIT_SECRET=your-rate-limit-secret-key

# Google reCAPTCHA site key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# =============================================================================
# Analytics & Monitoring
# =============================================================================
# Google Analytics Measurement ID
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry DSN for error tracking (private)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry Public DSN for client-side error tracking
SENTRY_PUBLIC_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# =============================================================================
# Payment & E-commerce
# =============================================================================
# Stripe secret key (private)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe publishable key (public)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# Cloud Services & Storage
# =============================================================================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Cloudinary URL for image optimization
CLOUDINARY_URL=cloudinary://your-cloudinary-url

# =============================================================================
# API & External Services
# =============================================================================
# API Base URL
API_BASE_URL=https://api.digifynn.com

# CDN URL for static assets
CDN_URL=https://cdn.digifynn.com

# Base URL for the application
BASE_URL=https://digifynn.com

# =============================================================================
# Development & Environment
# =============================================================================
# Node environment (development, staging, production)
NODE_ENV=development

# Port for development server
PORT=3000

# =============================================================================
# Database Configuration (if using local database)
# =============================================================================
# Database URL (if using Prisma or similar)
DATABASE_URL=postgresql://username:password@localhost:5432/digifynn

# =============================================================================
# Email Configuration (if using email services)
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# Social Media & External APIs
# =============================================================================
# Twitter API (if using Twitter integration)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Facebook API (if using Facebook integration)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# Performance & Caching
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
ENABLE_COMMENTS=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_SEARCH=true

# =============================================================================
# Development Tools
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable detailed logging
LOG_LEVEL=info

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database URL
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/digifynn_test

# Test environment
NODE_ENV=test

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker container configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com

# =============================================================================
# CI/CD Configuration
# =============================================================================
# CI/CD environment variables
CI=false
CDN_DISTRIBUTION_ID=your-cloudfront-distribution-id
S3_BUCKET_NAME=your-s3-bucket-name

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
# Health check endpoint
HEALTH_CHECK_URL=https://digifynn.com/health

# Monitoring API key
MONITORING_API_KEY=your-monitoring-api-key

# =============================================================================
# Backup & Recovery
# =============================================================================
# Backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Security Headers
# =============================================================================
# Content Security Policy
CSP_REPORT_URI=https://digifynn.com/csp-report

# HSTS configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true 